{
  "name": "@jimmy.codes/eslint-config",
  "version": "3.29.0",
  "description": "another opinionated eslint config",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/eslint-config.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typegen && pkgroll --minify",
    "coverage": "vitest run --coverage",
    "dev": "npx @eslint/config-inspector --open=false",
    "docs:build": "npx @eslint/config-inspector build",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc",
    "typegen": "tsx scripts/typegen.ts"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.21.0",
    "@next/eslint-plugin-next": "^15.1.7",
    "@tanstack/eslint-plugin-query": "^5.66.1",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@typescript-eslint/utils": "^8.24.1",
    "@vitest/eslint-plugin": "^1.1.31",
    "astro-eslint-parser": "^1.1.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-21e868a-20250216",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-storybook": "0.11.3",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "local-pkg": "^1.0.0",
    "typescript-eslint": "^8.24.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.7.1",
    "@eslint/config-inspector": "1.0.0",
    "@jimmy.codes/prettier-config": "1.3.0",
    "@playwright/test": "1.50.1",
    "@tanstack/react-query": "5.66.9",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.2.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.13.5",
    "@types/react": "18.3.12",
    "@vitest/coverage-v8": "3.0.6",
    "astro": "5.3.0",
    "clean-pkg-json": "1.2.0",
    "commitlint": "19.7.1",
    "eslint": "9.21.0",
    "eslint-typegen": "2.0.0",
    "gitzy": "5.7.1",
    "is-ci": "4.1.0",
    "jiti": "2.4.2",
    "lefthook": "1.10.11",
    "next": "15.1.7",
    "pkgroll": "2.11.0",
    "prettier": "3.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "8.5.8",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "vitest": "3.0.6"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
