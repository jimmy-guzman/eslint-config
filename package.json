{
  "name": "@jimmy.codes/eslint-config",
  "version": "6.2.1",
  "description": "A simple, modern ESLint config that covers most use cases.",
  "keywords": [
    "eslint",
    "eslint-config",
    "typescript",
    "react",
    "nextjs",
    "astro",
    "vitest",
    "tanstack-query",
    "react-compiler",
    "modern",
    "opinionated",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/eslint-config.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typegen && tsdown",
    "coverage": "vitest run --coverage",
    "dev": "eslint-config-inspector --open=false",
    "docs:build": "eslint-config-inspector build",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc",
    "typegen": "tsx scripts/typegen.ts"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint-react/eslint-plugin": "2.0.0-next.127",
    "@eslint/js": "^9.33.0",
    "@next/eslint-plugin-next": "^15.4.6",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/utils": "^8.39.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "astro-eslint-parser": "^1.2.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "^54.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-storybook": "0.12.0",
    "eslint-plugin-testing-library": "^7.6.6",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "local-pkg": "^1.1.1",
    "typescript-eslint": "^8.39.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/config-inspector": "1.1.0",
    "@jimmy.codes/prettier-config": "1.6.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.15.30",
    "@types/react": "19.1.10",
    "@vitest/coverage-v8": "3.2.4",
    "clean-pkg-json": "1.3.0",
    "commitlint": "19.8.1",
    "eslint": "9.33.0",
    "eslint-typegen": "2.3.0",
    "gitzy": "5.9.0",
    "is-ci": "4.1.0",
    "jiti": "2.5.1",
    "lefthook": "1.12.3",
    "prettier": "3.6.2",
    "publint": "0.3.12",
    "tsdown": "0.14.1",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">= 20.10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
