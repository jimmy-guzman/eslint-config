{
  "name": "@jimmy.codes/eslint-config",
  "version": "5.8.0",
  "description": "A pragmatic and opinionated ESLint config for modern development.",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/eslint-config.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typegen && tsup",
    "coverage": "vitest run --coverage",
    "dev": "eslint-config-inspector --open=false",
    "docs:build": "eslint-config-inspector build",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc",
    "typegen": "tsx scripts/typegen.ts"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint-react/eslint-plugin": "^1.40.3",
    "@eslint-react/kit": "^1.40.3",
    "@eslint-react/shared": "^1.40.3",
    "@eslint/js": "^9.24.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tanstack/eslint-plugin-query": "^5.71.5",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/parser": "^8.29.0",
    "@typescript-eslint/utils": "^8.29.0",
    "@vitest/eslint-plugin": "^1.1.39",
    "astro-eslint-parser": "^1.2.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import-x": "^4.10.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react-compiler": "19.0.0-beta-e993439-20250328",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-storybook": "0.12.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.0.0",
    "local-pkg": "^1.1.1",
    "typescript-eslint": "^8.29.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/config-inspector": "1.0.2",
    "@jimmy.codes/prettier-config": "1.5.0",
    "@playwright/test": "1.51.1",
    "@tanstack/react-query": "5.71.10",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@vitest/coverage-v8": "3.1.1",
    "astro": "5.6.1",
    "clean-pkg-json": "1.2.1",
    "commitlint": "19.8.0",
    "eslint": "9.24.0",
    "eslint-typegen": "2.1.0",
    "gitzy": "5.8.1",
    "is-ci": "4.1.0",
    "jiti": "2.4.2",
    "lefthook": "1.11.6",
    "next": "15.2.4",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "8.6.12",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vitest": "3.1.1"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
